{
  "name": "design-systems",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "zx": "zx",
    "mitosis": "mitosis",
    "dev": "concurrently --kill-others \"yarn build:mitosis:watch\" \"yarn build:tailwind:watch\"",
    "build:mitosis:watch": "chokidar --initial \"src/components/**/*.tsx\" -c \"yarn zx scripts/compile-mitosis.mjs {event} {path}\"",
    "build:tailwind:watch": "tailwindcss -i src/styles/global.css -o build/style.css --watch"
  },
  "devDependencies": {
    "@builder.io/mitosis-cli": "^0.0.10",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "tailwindcss": "^3.0.15",
    "zx": "^4.3.0"
  }
}
